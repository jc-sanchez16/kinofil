<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

    <link href="/stylesheets/materialize.css" rel="stylesheet" media="screen,projection" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!--Let browser know website is optimized for mobile-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="./images/icon.ico" />
    <title>Kinofil - Movies</title>
</head>

<body>
    <%- include("./navbar.ejs") %>

    <div class="section no-pad-bot" id="index-banner">
        <div class="container">
            <div class="row">
                <h1><%= user.username %>'s profile</h1>
            </div>
            <% let i = 1; %>
            <div class="row" id="to-watch-list">
                <h3> To-watch </h3>
                <% 
            				user.watchlist.forEach( (movie) =>{
            					
            				let idCon="contenedor-"+i;
            				let idTitle="title-"+i;
            				%>

                <div class="col s2 m3">
                    <a href="/movies/<%=movie._id %>">
                        <div class="movies-card card">

                            <div class="card-image">
                                <img class="movie-image" src=<%=movie.poster %> height="100%" width="100%" />
                                <% if (movie.overview.length > 190) { %>
                                <span class="descrip card-title" id=<%= idCon %>><%= movie.overview.substring(0,120) %>
                                    ...
                                </span>
                                <% } else { %>
                                <span class="descrip card-title" id=<%= idCon %>><%= movie.overview %></span> </span>
                                <% } %>
                                <span class="movie-title card-title" id=<%= idTitle %>><%= movie.title%></span>
                                <% i+=1; %>


                            </div>
                        </div>
                    </a>
                </div>

                <%}  )%>
            </div>
            <div class="row" id="watched-list">
                <h3> Watched </h3>
